# vim: ft=gitconfig:
[user]
  name = Robert Iannucci
[core]
  autocrlf = false
  filemode = false
[color]
  ui = true
[alias]
  udiff  = !git diff $(git merge-base @{u} HEAD)
  map    = !git log --graph --full-history --all --color --date=short --pretty=format:'%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%ad %s' $(git config iannucci.mapextra 2> /dev/null) || true
  reup   = !~/.vim/gitscripts/reup.py
  squash = !git reset --soft $(git merge-base $(git config branch.$(git rev-parse --abbrev-ref HEAD).merge) HEAD) && git commit -C HEAD@{1} -a
  freeze = commit -am 'FREEZE'
  thaw   = !((git log --pretty=%s -n1 | grep FREEZE -q) && git reset 'HEAD~') || echo 'Nothing to thaw.'
  nb     = checkout --track origin/master -b
  tb     = checkout -tb
  rp     = !~/.vim/gitscripts/rp.py
[credential]
  helper = osxkeychain
[push]
  default = simple
