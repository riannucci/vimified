# vim: ft=gitconfig:
[user]
  name = Robert Iannucci
[core]
  autocrlf = false
  filemode = false
  excludesfile = ~/vimified/gitexcludes
[color]
  ui = true
[alias]
  udiff  = !git diff $(git merge-base @{u} HEAD)
  map    = !git log --graph --full-history --all --color --date=short --pretty=format:'%C(red bold)%h%x09%Creset%C(green)%d%Creset %C(yellow)%ad%Creset ~ %s' $(git config iannucci.mapextra 2> /dev/null) | ~/.vim/gitscripts/pylog.py | less || true
  reup   = !~/.vim/gitscripts/reup.py
  squash = !~/.vim/gitscripts/squash.py
  freeze = commit -am 'FREEZE'
  thaw   = !((git log --pretty=%s -n1 | grep FREEZE -q) && git reset 'HEAD~') || echo 'Nothing to thaw.'
  nb     = checkout --track origin/master -b
  tb     = checkout -tb
  rp     = !~/.vim/gitscripts/rp.py
[credential]
  helper = osxkeychain
[push]
  default = upstream
